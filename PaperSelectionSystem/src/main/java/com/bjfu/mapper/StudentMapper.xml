<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bjfu.mapper.StudentMapper">
	<select id="selectStudentAll" resultType="com.bjfu.po.Student">
		select * from student
	</select>
	<select id="selectStudentsByCourseId" resultType="com.bjfu.po.Student">
		select student.*
		from sc inner join student on sc.student_id=student.student_id
		where course_id=#{course_id}
	</select>
	<select id="selectStudentByTopicId" resultType="com.bjfu.po.Student">
		select student.*
		from stutopic inner join student on stutopic.student_id=student.student_id
		where topic_id=#{topic_id}
	</select>
	<select id="selectStudentByUserId" resultType="com.bjfu.po.Student">
		select *
		from student
		where user_id=#{user_id}
	</select>
		
</mapper>
